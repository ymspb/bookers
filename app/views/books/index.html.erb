<p id="notice"><%= flash[:notice] %></p>
<h1>Books</h1>
<!-- show flash message -->
<!-- show all database -->
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
  <tr>
    <td class="table-title"><%= book.title %></td>
    <td class="table-body"><%= book.body %></td>
    <td><%= link_to 'Show', book_path(book.id), class: "links"%></td>
    <td><%= link_to 'Edit', edit_book_path(book.id), class: "links"%></td>
    <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class: "links" %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<h2>New Book</h2>
<!-- show errors if they exist -->
<% if @book.errors.any? %>
  <div class="errors-area">
    <h3 class="errors-header"><%= @book.errors.count%> errors prohibited this book from being saved:</h3>
    <div class="errors-content">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
<!-- form to add new book to database -->
<%= form_with model: @book do |f| %>
  <!-- <label for=""></label> -->
  <div class="field">
    <label for="book-title">Title</label>
    <%= f.text_field :title, class: "book-title" %>
  </div>
  <div class="field">
    <label for="book-summary">Body</label>
    <%= f.text_area :body, class: "book-summary" %>
  </div>
  <div class="action">
    <%= f.submit 'Create Book'%>
  </div>

<% end %>
