<p><%= flash[:notice] %></p>
<h1>Books</h1>
<!-- show flash message -->
<!-- show all database -->
<table>
  <tr>
    <th>title</th>
    <th>body</th>
    <th colspan="3"></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td class="table-title"><%= book.title %></td>
    <td class="table-body"><%= book.body %></td>
    <td class="links"><%= link_to 'Show', book_path(book.id) %></td>
    <td class="links"><%= link_to 'Edit', edit_book_path(book.id) %></td>
    <td class="links"><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"%></td>
  </tr>
  <% end %>
</table>
<h2>New Book</h2>
<!-- show errors if they exist -->
<div class="errors-area">
  <% if @book.errors.any? %>
    <h3 class="errors-header"><%= @book.errors.count%> errors prohibited this book from being saved:</h3>
    <div class="errors-content">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
<!-- form to add new book to database -->
<%= form_with model: @book do |f| %>
  <!-- <label for=""></label> -->
  <div class="field">
    <label for="book-title">title</label>
    <%= f.text_field :title, class: "book-title" %>
  </div>
  <div class="field">
    <label for="book-summary">body</label>
    <%= f.text_area :body, class: "book-summary" %>
  </div>
  <div class="action">
    <%= f.submit 'Create Book'%>
  </div>

<% end %>
