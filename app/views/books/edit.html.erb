<h1>Editing Book</h1>
<!-- show errors if they exist -->
<% if @book.errors.any? %>
  <div class="errors-area">
    <h3 class="errors-header"><%= @book.errors.count%> errors prohibited this book from being saved:</h3>
    <div class="errors-content">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<!-- form to update database -->
<%= form_with model: @book do |f| %>
  <div class="field">
    <label for="book-title">title</label>
    <%= f.text_field :title, class: "book-title" %>
  </div>
  <div class="field">
    <label for="book-summary">body</label>
    <%= f.text_area :body, class: "book-summary" %>
  </div>
  <div class="action">
    <%= f.submit 'Update Book'%>
  </div>
<% end %>

<%= link_to 'Show', book_path(@book.id), class: "links" %> | <%= link_to 'Back', books_path, class: "links" %>
